$(function() {
	$('#route_show').click(function(){
		$('#directions').html('<%= escape_javascript(render("directions")) %>');
	})

	$('#route_clear').click(function(){
		$('#directions').html('');
	})
	
	 var latlng = new google.maps.LatLng(<%= escape_javascript(@route.startpoint.latlong) %>);
    var myOptions = {
		position:latlng,
        pov: {
	        heading: 165,
	        pitch:0,
	        zoom:1
	      }
    };


    var  myPano = new google.maps.StreetViewPanorama(document.getElementById("map"), myOptions);
	myPano.setVisible(true);
	
		
})